// success

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n==0){
          return 0;
        }
        if(n==1){
          return 1;
        }
        if(n%2 == 0){
          int ans = isPowerOfTwo(n/2);
          return ans;
        }
        else{
          return 0;
        }


        }
    
        
    
};
